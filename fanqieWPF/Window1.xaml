<Window x:Class="fanqieWPF.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="343" MaxHeight="300" MaxWidth="343" Loaded="Window_Loaded"
    WindowStyle="None" AllowsTransparency="True" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Aqua">
            <StackPanel Orientation="Horizontal">
                <Image Source=".\resources\miao.jpg" Stretch="None" Grid.Row="0" Grid.Column="0"/>
                <TextBlock Text="Let's WPF" FontSize="18" Grid.Column="1" Margin="25,50,10,10"/>
            </StackPanel>
        </Border>
        <Button Content="Click me" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Height="50" Margin="5,5,5,5" Click="Button_Click"/>
        
    </Grid>
</Window>
